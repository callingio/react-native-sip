{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": true,
        "isolatedModules": true,
        "pretty": true,
        "resolveJsonModule": true,
        "lib": [
            "DOM",
            "ES2015",
            "ES2018",
            "ESNext"
        ],
        "removeComments": true,
        "newLine": "lf",
        "outDir": "dist",
        "rootDir": "src",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
    ]
}
